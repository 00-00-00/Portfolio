<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    >
  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/colorAccent"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_margin="@dimen/view_margin_size2"
      android:text="@string/find_me"
      android:textColor="@color/textColorInverse"
      android:textSize="24sp"
      />

  <View
      android:layout_width="4dp"
      android:layout_height="0dp"
      android:layout_gravity="center"
      android:layout_weight="1"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="@dimen/view_margin_size2"
      android:drawableLeft="@drawable/ic_github"
      android:drawablePadding="@dimen/view_margin_size2"
      android:gravity="center_vertical"
      android:text="00-00-00"
      android:textColor="@color/textColorInverse"
      android:textSize="34sp"
      />
  <View
      android:layout_width="4dp"
      android:layout_height="0dp"
      android:layout_gravity="center"
      android:layout_weight="1"
      android:background="@color/colorAccent"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="@dimen/view_margin_size2"
      android:drawableLeft="@drawable/ic_linkedin"
      android:drawablePadding="@dimen/view_margin_size2"
      android:gravity="center_vertical"
      android:text="in/00-00-00"
      android:textColor="@color/textColorInverse"
      android:textSize="34sp"
      />
  <View
      android:layout_width="4dp"
      android:layout_height="0dp"
      android:layout_gravity="center"
      android:layout_marginBottom="@dimen/view_margin_size2"
      android:layout_weight="1"
      />

</LinearLayout>