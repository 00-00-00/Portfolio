<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >
  <TextView
      android:id="@+id/i_skill_divider_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/view_margin_size1"
      android:layout_marginTop="@dimen/view_margin_size2"
      android:paddingLeft="@dimen/view_margin_size2"
      android:paddingRight="@dimen/view_margin_size2"
      android:text="Divider"
      android:textColor="@color/textColorInverse"
      android:textSize="24sp"
      />

  <View
      android:layout_width="wrap_content"
      android:layout_height="4dp"
      android:layout_alignLeft="@id/i_skill_divider_text"
      android:layout_alignRight="@+id/i_skill_divider_text"
      android:layout_below="@id/i_skill_divider_text"
      android:layout_marginBottom="@dimen/view_margin_size1"
      android:background="@color/colorAccent"
      />
</RelativeLayout>