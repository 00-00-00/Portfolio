<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <az.plainpie.PieView
        android:id="@+id/i_skill_pie"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:inner_pie_padding="30"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/view_margin_size2"
        />

    <TextView
        android:id="@+id/i_skill_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/view_margin_size2"
        android:layout_toRightOf="@id/i_skill_pie"
        android:text="Skill 1"
        android:textSize="24sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_alignParentBottom="true"
        android:background="@color/md_light_dividers"
        />


  </RelativeLayout>
</layout>