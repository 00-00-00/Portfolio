<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        >

      <LinearLayout
          android:id="@+id/f_bio_container_1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:visibility="visible"
          >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/f_bio_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/view_margin_size3"
            android:layout_marginTop="@dimen/view_margin_size7"
            android:scaleType="centerCrop"
            android:src="@color/colorAccent"
            app:civ_border_color="@color/md_white_1000"
            app:civ_border_width="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/view_margin_size2"
            android:text="Arjun B"
            android:textColor="@color/textColorInverse"
            android:textSize="56sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hellooo, World Ich bin here"
            android:textColor="@color/md_white_1000"
            android:textSize="24sp"
            />


        <ImageButton
            android:id="@+id/f_bio_next"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_drop_down_circle_white_72dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            />
      </LinearLayout>

      <RelativeLayout
          android:id="@+id/f_bio_container_2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:animateLayoutChanges="true"
          android:gravity="center"
          android:visibility="gone"
          >
        <TextView
            android:id="@+id/f_bio_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?selectableItemBackground"
            android:drawableLeft="@drawable/ic_palette_white_24dp"
            android:drawablePadding="@dimen/view_margin_size2"
            android:paddingLeft="@dimen/view_margin_size2"
            android:paddingRight="@dimen/view_margin_size2"
            android:text="Design"
            android:textColor="@color/textColorInverse"
            android:textSize="24sp"
            />

        <View
            android:id="@+id/f_bio_divider_1"

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignLeft="@id/f_bio_title_1"
            android:layout_alignRight="@id/f_bio_title_1"
            android:layout_below="@id/f_bio_title_1"
            android:layout_marginBottom="@dimen/view_margin_size2"
            android:layout_marginTop="@dimen/view_margin_size1"
            android:background="@color/colorAccent"
            />

        <TextView
            android:id="@+id/f_bio_desc_1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/f_bio_divider_1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_margin_size2"
            android:layout_marginLeft="@dimen/view_margin_size4"
            android:layout_marginRight="@dimen/view_margin_size4"
            android:gravity="center"
            android:text="@string/design_desc"
            android:textColor="@color/textColorInverse"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/f_bio_title_2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/f_bio_desc_1"
            android:layout_centerHorizontal="true"
            android:background="?selectableItemBackground"
            android:drawableLeft="@drawable/ic_build_white_24dp"
            android:drawablePadding="@dimen/view_margin_size2"
            android:paddingLeft="@dimen/view_margin_size2"
            android:paddingRight="@dimen/view_margin_size2"
            android:text="Develop"
            android:textColor="@color/textColorInverse"
            android:textSize="24sp"
            />

        <View
            android:id="@+id/f_bio_divider_2"

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignLeft="@id/f_bio_title_2"
            android:layout_alignRight="@id/f_bio_title_2"
            android:layout_below="@id/f_bio_title_2"
            android:layout_marginBottom="@dimen/view_margin_size2"
            android:layout_marginTop="@dimen/view_margin_size1"
            android:background="@color/colorAccent"
            />

        <TextView
            android:id="@+id/f_bio_desc_2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/f_bio_divider_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_margin_size2"
            android:layout_marginLeft="@dimen/view_margin_size4"
            android:layout_marginRight="@dimen/view_margin_size4"
            android:gravity="center"
            android:text="@string/development_desc"
            android:textColor="@color/textColorInverse"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/f_bio_title_3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/f_bio_desc_2"
            android:layout_centerHorizontal="true"
            android:background="?selectableItemBackground"
            android:drawableLeft="@drawable/ic_grade_white_24dp"
            android:drawablePadding="@dimen/view_margin_size2"
            android:paddingLeft="@dimen/view_margin_size2"
            android:paddingRight="@dimen/view_margin_size2"
            android:text="Deliver"
            android:textColor="@color/textColorInverse"
            android:textSize="24sp"
            />

        <View
            android:id="@+id/f_bio_divider_3"


            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignLeft="@id/f_bio_title_3"
            android:layout_alignRight="@id/f_bio_title_3"
            android:layout_below="@+id/f_bio_title_3"
            android:layout_marginBottom="@dimen/view_margin_size2"
            android:layout_marginTop="@dimen/view_margin_size1"
            android:background="@color/colorAccent"
            />

        <TextView
            android:id="@+id/f_bio_desc_3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/f_bio_divider_3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_margin_size2"
            android:layout_marginLeft="@dimen/view_margin_size4"
            android:layout_marginRight="@dimen/view_margin_size4"
            android:gravity="center"
            android:text="@string/deliver_desc"
            android:textColor="@color/textColorInverse"
            android:visibility="gone"
            />
      </RelativeLayout>
    </LinearLayout>
  </ScrollView>
</layout>